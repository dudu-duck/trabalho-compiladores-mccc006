{
    "compilerOptions": {
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "allowUnreachableCode": false,
        "target": "esnext",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "lib",
        "rootDir": "src",
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ]
}